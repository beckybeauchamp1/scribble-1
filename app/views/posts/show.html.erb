<div class="container">
  <h1><%= @post.title %></h1>
  <h3>By <%= @post.author %> at <%= @post.updated_at %></h3>

  <div class="post"><%= @post.content %></div>

  <p><%= link_to "Edit this Post", edit_post_url %>
  <p><%= link_to 'Delete Post', @post,
                  :method => :delete %>
  <p><%= link_to "Back to Home", posts_url %></p>

  <h4>Comments</h4>

  <% @comments.each do |comment| %>
    <p><%= comment.content %></p>
    <p>By <%= comment.author %> at <%= comment.updated_at %></p>
    <div class="button">
      <span class="small-button"><%= link_to "Edit", edit_post_comment_url(@post, comment) %></span>
    </div>
  <% end %>

  <p>
    <div class="button">
      <span class="inner-button"><%= link_to "New Comment", new_post_comment_url(@post) %></p></span>
    </div>
</div>
