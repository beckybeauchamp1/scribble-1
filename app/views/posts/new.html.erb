<div class="container">
  <h1>New Post</h2>

  <%= form_for @post do |f| %>
    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>
    <p><%= f.label :content %></p>
    <p><%= f.text_field :content %></p>
    <p><%= f.hidden_field(:author, value: @username) %></p>
    <p><%= f.submit %></p>
  <% end %>

  <%= link_to "Back to Home", posts_url %>
</div>
