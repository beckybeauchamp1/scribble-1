<!DOCTYPE html>
<html>
<head>
  <title>Scribble</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <% if @current_user %>
      <div class="welcome"><%= link_to "Welcome, #{@current_user.username}!", user_path(@current_user) %></div>
      <div class="nav-links">
        <span class="nav-link"><%= link_to "Home", posts_url %></span>
        <span class="nav-link"><%= link_to "Sign Out", session_path, method: :delete %></span>
      </div>
    <% else %>
      <div class="nav-links">
        <span class="nav-link"><%= link_to "Home", posts_url %></span>
        <span class="nav-link"><%= link_to "Sign Up", new_user_path %></span>
        <span class="nav-link"><%= link_to "Sign In", new_session_path %></span>
      </div>
    <% end %>
  </nav>
  <%= yield %>
</body>
</html>
